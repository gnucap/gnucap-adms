load ../src/.libs/adms_opamp.so
spice

* note: nodenames case-sensitive

.param vdd 1.7
.param ampl=0.000005
.param freq=1

.verilog

paramset myota opamp;
	.A0   = 2e5;
	.f0dB = 1e6;
	.Sr   = 5e5
endparamset

// biased by 1V
myota OTA1 (nout1, nin_p, 0, ndd, ndd_minus, nvbias);
// unbiased
myota OTA0 (nout0, nin_p, 0, ndd, ndd_minus);
// bypass paramset
opamp OTA2 (nout2, nin_p, 0, ndd, ndd_minus);

list

spice

.list

Vcc ndd 0 vdd
Vcc1 0 ndd_minus  vdd
V1 nin_p 0  sin(frequency=freq, amplitude=ampl, offset=0)

R0 nout0 0 100k
R1 nout1 0 100k

Vnbias nvbias 0 1

*                 o ncc
*                 |
*                 |
*                 |
*               , |
*               |\|
* nin   ___     | \
*   o--[___]----|+ \
*               |   >------------o  nout
*         ------|- /             |
*         |     | /             | |
*        [Q]    |/|             | |R
*         |     ' |              |
*         V       V              V

.print tran v(nodes)
.tran .1 1
.param ampl=2
.tran 2

.store tran v(nout0)
.param freq=100k
.tran 0 .01m .001m
.measure x cross(probe="v(nout0)", cross={0}, first fall before=0.01m )
.end
